@model Infraestructura.Model.Usuario

@{ ViewBag.Title = "¿Seguro quiere borrar este miembro?"; }

<style>
    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    input[type=submit] {
        background-color: #0069D9;
        color: white;
        margin-right: 5px;
    }

    .details-view {
        margin-top: 20px;
    }

    .btn-container {
        text-align: center;
        margin-top: 20px;
    }


    .btn-edit, .btn-link {
        background-color: #eaa159;
        border-color: #eaa159;
        color: #ffffff;
        display: inline-block;
        text-align: center;
        transition: background-color 0.3s ease;
        margin: 0 10px; /* Espacio entre los botones */
    }


        .btn-edit:hover, .btn-link:hover {
            background-color: #f0bb86;
            border-color: #f0bb86;
        }

    .details-view dt {
        font-weight: bold;
        color: #07305d;
        width: 150px; /* Define a fixed width for labels */
        display: inline-block; /* Keep labels on the same line */
    }

    .centered-information {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>

<h2 class="form-title">@ViewBag.Title</h2>

<div class="details-view">
    <div>
        <h4></h4>
        <hr />


        @using (Html.BeginForm("Delete", "Usuario", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id_Usuario)


    <div class="btn-container">
        <input type="submit" value="Borrar" class="btn btn-default" />

        <dl class="centered-information">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cedula)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cedula)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Estado_usuario)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Estado_usuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Correo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Correo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Telefono)
            </dd>
        </dl>



        <div class=" button-group mt-5">
            <input type="submit" value="Eliminar" class="btn btn-default" />

            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
        }
    </div>
</div>
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
