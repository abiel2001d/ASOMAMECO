@model Infraestructura.Model.Usuario

@{
    ViewBag.Title = "¿Seguro quiere borrar este usuario?";
}

<style>

    .form-title {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 24px;
        font-weight: bold;
    }

    .details-view {
        margin-top: 20px;
    }

    .btn-delete {
        background-color: #eaa159;
        border-color: #eaa159;
        color: #ffffff;
    }

        .details-view dt {
            font-weight: bold;
            color: #07305d;
            width: 150px; /* Define a fixed width for labels */
            display: inline-block; /* Keep labels on the same line */
        }
</style>

<h2 class="form-title">@ViewBag.Title</h2>

<div class="details-view">
    <div>
        <h4></h4>
        <hr />
        <dl class="dl-horizontal">
           

           
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cedula)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cedula)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Estado_usuario)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Estado_usuario)
            </dd>
           
            <dt>
                @Html.DisplayNameFor(model => model.Correo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Correo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefono)
            </dd>

        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-delete" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        }
    </div>
</div>
