@model IEnumerable<Infraestructura.Model.Usuario>

@{
    ViewBag.Title = "Index";
}

<style>
    .table-sm {
        font-size: 0.875rem;
    }

    .table thead th {
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .action-buttons a {
        margin-right: 5px;
    }

    .centered-title {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .import-button {
        margin-bottom: 20px;
    }

    .filter-input {
        width: 100%;
        padding: 5px;
        box-sizing: border-box;
    }
</style>

<div class="container">
    <h2 class="centered-title">Lista de miembros</h2>

    @using (Html.BeginForm("ImportarMiembros", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        // <input type="file" name="file" required />

        @Html.ActionLink("Agregar Nuevo Miembro", "Create", null, new { @style = "margin-bottom: 20px;", @class = "btn btn-primary" })
    }


    <table class="table table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th>
                    <input type="text" id="filterNombre" class="filter-input" placeholder="Filtrar por Nombre">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    <input type="text" id="filterCedula" class="filter-input" placeholder="Filtrar por Cédula">
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    <input type="text" id="filterEstado" class="filter-input" placeholder="Filtrar por Estado">
                    @Html.DisplayNameFor(model => model.Estado_usuario)
                </th>
                <th>
                    <input type="text" id="filterCorreo" class="filter-input" placeholder="Filtrar por Correo">
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    <input type="text" id="filterTelefono" class="filter-input" placeholder="Filtrar por Teléfono">
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="resultado">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w-25">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado_usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td class="action-buttons">
                        <a href="@Url.Action("Edit", new { id = item.Id_Usuario })" class="btn btn-secondary btn-sm" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = item.Id_Usuario })" class="btn btn-info btn-sm" title="Detalles">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id_Usuario })" class="btn btn-danger btn-sm" title="Borrar">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryajax")
    <script>
        $(document).ready(function () {
            function filterTable() {
                var nombre = $('#filterNombre').val().toLowerCase();
                var cedula = $('#filterCedula').val().toLowerCase();
                var estado = $('#filterEstado').val().toLowerCase();
                var correo = $('#filterCorreo').val().toLowerCase();
                var telefono = $('#filterTelefono').val().toLowerCase();

                $('#resultado tr').each(function () {
                    var row = $(this);
                    var match = true;

                    if (nombre && !row.find('td').eq(0).text().toLowerCase().includes(nombre)) {
                        match = false;
                    }
                    if (cedula && !row.find('td').eq(1).text().toLowerCase().includes(cedula)) {
                        match = false;
                    }
                    var estadoText = " " + estado;
                    if (estado && !row.find('td').eq(2).text().toLowerCase().includes(estadoText)) {
                        match = false;
                    }
                    if (correo && !row.find('td').eq(3).text().toLowerCase().includes(correo)) {
                        match = false;
                    }
                    if (telefono && !row.find('td').eq(4).text().toLowerCase().includes(telefono)) {
                        match = false;
                    }

                    row.toggle(match);
                });
            }

            $('.filter-input').on('keyup', filterTable);
        });
    </script>
}