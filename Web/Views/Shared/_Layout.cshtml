<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Use Bootstrap 5 CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @Styles.Render("~/Content/css")
    <style>
        .navbar {
            padding: 0.5rem 1rem;
            background-color: #07305d !important;
        }

            .navbar-brand, .navbar img {
                display: flex;
                align-items: center;
            }

        .navbar-brand {
            margin-right: 10px;
        }

        .nav-link {
            padding: 0.25rem 0;
        }

        .user-info {
            display: flex;
            align-items: center;
            color: white;
            margin-left: auto;
        }

            .user-info i {
                margin-left: 10px;
            }

        .divider {
            width: 1px;
            height: 25px;
            background-color: white;
            margin: 0 15px;
        }
    </style>
</head>
<body>
    @{
        String nombre = "";
        if (Session["User"] != null)
        {
            Infraestructura.Model.Administrador usuario = new Infraestructura.Model.Administrador();
            usuario = (Infraestructura.Model.Administrador)Session["User"];
            nombre = $"{usuario.Usuario}";
        }
    }
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ASOMAMECO</a>
            <img src="~/Utils/Img/logo.png" width="60px" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Session["User"] != null)
                    {
                        <li class="nav-item">
                            <div class="user-info">
                                <span>@nombre</span>
                                <i class="fas fa-user-circle"></i>
                                <div class="divider"></div>
                                @Html.ActionLink("Cerrar Sesión", "Logout", "Login", null, new { @class = "nav-link text-white" })
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Iniciar Sesión", "Index", "Login", null, new { @class = "nav-link text-white" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="margin-top: 80px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASOMAMECO</p>
        </footer>
    </div>
    <!-- Use Bootstrap 5 JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sweetalert")
    @RenderSection("scripts", required: false)
    @if (TempData["mensaje"] != null)
    {
        <script>
            @Html.Raw(TempData["mensaje"])
        </script>
    }
</body>
</html>
