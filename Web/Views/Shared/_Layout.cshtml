<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Use Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/Utils/css/own-style.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <style>
        .navbar {
            padding: 0.5rem 1rem;
           
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            margin-right: 10px;
        }

            .navbar-brand img {
                margin-left: 10px;
            }

        .nav-link {
            padding: 0.25rem 0;
            font-weight: 100;
        }

        .user-info {
            display: flex;
            align-items: center;
            color: white;
            margin-left: auto;
        }

            .user-info i {
                margin-left: 10px;
            }

        .divider {
            width: 1px;
            height: 25px;
            background-color: white;
            margin: 0 20px;
        }

        .nav-item:last-child {
            margin-left: 15px;
        }
    </style>
</head>
<body>
    @{
        String nombre = "";
        if (Session["User"] != null)
        {
            Infraestructura.Model.Administrador usuario = (Infraestructura.Model.Administrador)Session["User"];
            nombre = $"{usuario.Usuario}";
        }
    }


    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
        <div class="container d-flex justify-content-between">
            <div class="navbar-brand">
                <h1 class="text-light">@Html.ActionLink("ASOMAMECO", "Index", "Home", null, new { @class = "nav-link scrollto", @style=""})</h1>
                <img src="~/Utils/Img/logo.png" width="85px" height="50px" style="padding-bottom:13px">
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link scrollto" })</li>
                    @if (Session["User"] != null)
                    {
                        <li><a class="nav-link scrollto " href="#portfolio">Miembros</a></li>
                        <li><a class="nav-link scrollto " href="#portfolio">Eventos</a></li>
                        <li class="dropdown">
                            <a href="#">Reportes <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <l
                            <li><a href="#">Drop Down 2</a></li>
                            <li><a href="#">Drop Down 3</a></li>
                            <li><a href="#">Drop Down 4</a></li>
                            </ul>
                        </li>
                    }

                    <div class="divider"></div>
                    @if (Session["User"] != null)
                    {
                        <li class="nav-item">
                            <div class="user-info">
                                <span>@nombre</span>
                                <i class="fas fa-user-circle"></i>

                                @Html.ActionLink("Cerrar Sesión", "Logout", "Login", null, new { @class = "nav-link text-white", @style = "padding:10px" })
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Iniciar Sesión", "Index", "Login", null, new { @class = "nav-link text-white", @style = "padding:0px" })
                        </li>
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->

    <div>
        @RenderBody()

        <!-- ======= Footer ======= -->

    </div>


    <!-- Footer -->
    <footer class="text-center text-lg-start bg-body-tertiary text-muted">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <!-- Left -->
            <div class="me-5 d-none d-lg-block">
               
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>ASOMAMECO
                        </h6>
                        <p> Ofrecemos recursos, apoyo y una comunidad
                            sólida para ayudarte a alcanzar tus metas. Únete a nosotros
                            y descubre las ventajas de ser parte de ASOMAMECO.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Enalces Útiles
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Angular</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">React</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Vue</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Laravel</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Páginas Adicionales
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Pricing</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Settings</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Orders</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Contacto</h6>
                        <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            info@example.com
                        </p>
                        <p><i class="fas fa-phone me-3"></i> + 01 234 567 88</p>
                        <p><i class="fas fa-print me-3"></i> + 01 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Copyright:
            <a class="text-reset fw-bold" href="#">ASOMAMECO</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <!-- Use Bootstrap 5 JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sweetalert")
    @RenderSection("scripts", required: false)
    @if (TempData["mensaje"] != null)
    {
        <script>
            @Html.Raw(TempData["mensaje"])
        </script>
    }
</body>
</html>
