@model Infraestructura.Model.Administrador

@{
    ViewBag.Title = "Login";
}

<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden  m-5" style="border-radius:50px">
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }
    </style>

    <div class="container px-3 py-3 text-center text-lg-start my-3">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    Tu mejor opción <br />
                    <span style="color: hsl(218, 81%, 75%)">Únete y disfruta</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Bienvenido a ASOMAMECO, la asociación que trabaja por el desarrollo y
                    crecimiento tuyo. Ofrecemos recursos, apoyo y una comunidad
                    sólida para ayudarte a alcanzar tus metas. Únete a nosotros
                    y descubre las ventajas de ser parte de ASOMAMECO.
                </p>
            </div>


            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass"  style="border-radius:50px">
                    <div class="card-body px-4 py-5 px-md-5">
                        @using (Html.BeginForm("Login", "Login"))
                        {
                            @Html.AntiForgeryToken()

                            <p class="h3 fw-bold mb-3 pb-3 text-center">Ingresa tu cuenta</p>

                            <div class="form-outline mb-4 text-center">
                                @Html.Label("Usuario", new { @class = "form-label" })
                                @Html.TextBox("Usuario", null, new { @class = "form-control form-control mx-auto", style = "max-width: 800px; border-radius:15px" })
                            </div>

                            <div class="form-outline mb-4 text-center">
                                @Html.LabelFor(model => model.Contraseña, new { @class = "form-label" })
                                <div class="input-group mx-auto" style="max-width: 800px;">
                                    @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control form-control", id = "password", style = "max-width: 800px; border-bottom-left-radius:15px; border-top-left-radius:15px" })
                                    <span class="input-group-text" id="togglePassword" style="border-bottom-right-radius:15px; border-top-right-radius:15px">
                                        <i class="fa fa-eye" id="toggleIcon"></i>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                            </div>

                            <div class="pt-1 mb-4 text-center">
                                <button type="submit" class="btn btn-dark btn-block mx-auto" style="max-width: 500px; border-radius:15px;">Ingresar</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#togglePassword').click(function () {
                var passwordField = $('#password');
                var passwordFieldType = passwordField.attr('type');
                if (passwordFieldType === 'password') {
                    passwordField.attr('type', 'text');
                    $('#toggleIcon').removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    $('#toggleIcon').removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>
}
